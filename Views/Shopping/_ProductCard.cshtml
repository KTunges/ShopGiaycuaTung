@using MVC_template.Models.ViewModels
@model ProductListItem

<div class="card h-100 shadow-sm">
    <a href="/Product/@Model.ProductId" class="text-decoration-none">
        <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? "/Images/Template/no-image.png" : $"/Images/Products/{Model.ImagePath}")"
             class="card-img-top" alt="@Model.ProductName" style="object-fit:cover;height:180px;">
    </a>
    <div class="card-body d-flex flex-column">
        <h6 class="card-title text-truncate" title="@Model.ProductName">@Model.ProductName</h6>
        <div class="small text-muted mb-1">@Model.SupplierName</div>
        <div class="fw-bold mb-2">@Model.Price.ToString("#,0") đ</div>
        <div class="mt-auto">
            <a href="/Product/@Model.ProductId" class="btn btn-sm btn-outline-primary w-100">Xem chi tiết</a>
        </div>
    </div>
</div>
